@using Hunger.Data.Models

@if (SelectedRestaurant != null)
{
    <h3>@SelectedRestaurant?.Name</h3>

@if (SelectedRestaurant?.Type?.Count > 0)
{
    <div>
        @foreach (var type in SelectedRestaurant.Type)
        {
            <span class="badge rounded-pill bg-primary">@type</span>
        }
    </div>
}

@if (SelectedRestaurant.Details.HasVegetarianDishes)
{
    <span class="badge rounded-pill bg-success">Vegetarian</span>
}
    <br/><br/>
    
    <p>Address: @SelectedRestaurant.Details.Address</p>

    <h4>Signature Dishes</h4>
    <br/>
    <ul class="list-group list-group-flush">
        @foreach (var dish in SelectedRestaurant.Details.SignatureDishes)
        {
            <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                @dish.Name
                <div>
                    @if (dish.IsVegetarian)
                    {
                        <span class="badge rounded-pill bg-success">Vegetarian</span>
                    }
                    <span class="badge rounded-pill bg-dark">@dish.Price €</span>
                </div>
            </li>
        }
    </ul>
}

@code {

    [Parameter]
    public Restaurant? SelectedRestaurant { get; set; }
}